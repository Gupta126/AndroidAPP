<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >
<LinearLayout
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/horizontal_recycler_view"
        android:background="@android:color/transparent"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/myviewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred_dp_dimen"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:padding="5dp">

    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"

            android:text="@string/point_three_tv_one" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/point_three_tv_one" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:text="@string/point_three_tv_one" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/addTextviewlayout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    </LinearLayout>
    <LinearLayout
        android:id="@+id/point_five_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_dp_dimen"

        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/red_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/red_btn_default_holo_light"
            android:padding="5dp"
            android:text="@string/point_five_btn_text_red"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/green_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/green_btn_default_holo_light"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/point_five_btn_text_green"

            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/blue_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_btn_default_holo_light"
            android:padding="5dp"
            android:text="@string/point_five_btn_text_blue"


            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
</ScrollView>