<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >
<LinearLayout
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="3dp">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_item_one"
                android:layout_width="@dimen/two_hundred_dp_dimen"
                android:layout_height="@dimen/two_hundred_dp_dimen"
                android:layout_gravity="center"

                android:layout_margin="5dp"
                card_view:cardCornerRadius="4dp">

                <TextView

                    android:id="@+id/info_text_item_one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/hz_tv_name_item_one" />
            </android.support.v7.widget.CardView>
            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_item_two"
                android:layout_width="@dimen/two_hundred_dp_dimen"
                android:layout_height="@dimen/two_hundred_dp_dimen"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/info_text_item_two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/hz_tv_name_item_two" />
            </android.support.v7.widget.CardView>
            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_item_three"
                android:layout_width="@dimen/two_hundred_dp_dimen"
                android:layout_height="@dimen/two_hundred_dp_dimen"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/info_text_item_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/hz_tv_name_item_three" />
            </android.support.v7.widget.CardView>
            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_item_four"
                android:layout_width="@dimen/two_hundred_dp_dimen"
                android:layout_height="@dimen/two_hundred_dp_dimen"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/info_text_item_four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/hz_tv_name_item_four" />
            </android.support.v7.widget.CardView>
            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_item_five"
                android:layout_width="@dimen/two_hundred_dp_dimen"
                android:layout_height="@dimen/two_hundred_dp_dimen"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="4dp">

                <TextView
                    android:id="@+id/info_text_item_five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/hz_tv_name_item_five" />
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </HorizontalScrollView>


    <android.support.v4.view.ViewPager
        android:id="@+id/myviewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/two_hundred_dp_dimen"
        android:layout_marginTop="5dp"


        android:background="@android:color/transparent"
        android:padding="5dp">

    </android.support.v4.view.ViewPager>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|start"

            android:text="@string/point_three_tv_one" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/point_three_tv_one" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:text="@string/point_three_tv_one" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/point_five_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_dp_dimen"

        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/red_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/red_btn_default_holo_light"
            android:padding="5dp"
            android:text="@string/point_five_btn_text_red"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/green_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/green_btn_default_holo_light"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/point_five_btn_text_green"

            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/blue_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/blue_btn_default_holo_light"
            android:padding="5dp"
            android:text="@string/point_five_btn_text_blue"


            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
</ScrollView>